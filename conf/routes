# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Dashboard.home

GET     /service/{id}                           Service.summaryPage
GET     /service/{id}/{page}                    Service.editPage
GET     /addservice                             Service.newService
POST    /addservice                             Service.createListing

GET     /documents                              Documents.captureDocuments
POST    /documents                              Documents.submitDocuments

# Ignore favicon requests
# GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
