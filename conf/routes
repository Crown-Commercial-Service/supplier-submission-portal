# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Dashboard.home

GET     /service/{id}                           Service.summaryPage
GET     /service/{id}/{page}                    Service.editPage
GET     /addservice                             Service.newService
POST    /addservice                             Service.createListing

GET     /documents                              Documents.captureDocuments
POST    /documents                              Documents.submitDocuments

# Ignore favicon requests
# GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Summary page when finished
GET     /page/finished/{id}                     Service.summaryPage

# Service submission question pages
GET     /page/{pageId}/{listingId}              QuestionPageDisplay.showPage

POST    /page/1a/{listingId}                    Page1a.savePage
POST    /page/1b/{listingId}                    Page1b.savePage
POST    /page/1c/{listingId}                    Page1c.savePage
POST    /page/1d/{listingId}                    Page1d.savePage
POST    /page/2/{listingId}                     Page2.savePage

# Show summary page for service once all questions are complete
GET     /page/finished/{listingId}              Service.submissionComplete
