# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Dashboard.home
GET     /product/{id}                           Product.summaryPage
GET     /product/{id}/{page}                    Product.editPage
GET     /products                               Application.listProducts
GET     /insert                                 Application.captureProduct
POST    /insert                                 Application.submitProduct
GET     /documents                              Application.captureDocuments
POST    /documents                              Application.submitDocuments

# Ignore favicon requests
# GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
